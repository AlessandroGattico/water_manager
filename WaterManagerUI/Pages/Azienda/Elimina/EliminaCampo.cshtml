@page
@using WaterManagerUI.Model.Item
@model WaterManagerUI.Pages.Elimina.EliminaCampo

<link rel="stylesheet" href="~/css/site.css"/>


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2>Elimina campo</h2>
            <p>ATTENZIONE eliminando il campo verranno eliminati anche gli elementi ad esso associati</p>
            <form method="post">
                <div class="form-group">
                    <label asp-for="campoDel">Campo</label>
                    <select asp-for="campoDel" class="form-control">
                        @foreach (Campo element in Model.campi.OrderBy(c => c.nome).ToList())
                        {
                            <option value="@element.id">@element.nome</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary form-button">Elimina campo</button>
                </div>
            </form>
        </div>
    </div>
</div>