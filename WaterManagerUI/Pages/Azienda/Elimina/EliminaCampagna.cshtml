@page
@using WaterManagerUI.Model.Item
@model WaterManagerUI.Pages.Elimina.EliminaCampagna

<link rel="stylesheet" href="~/css/site.css"/>


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2>Elimina campagna</h2>
            <p>ATTENZIONE eliminando la campagna verranno eliminati anche gli elementi ad essa associati</p>
            <form method="post">
                <div class="form-group">
                    <label asp-for="campagnaDel">Campagna</label>
                    <select asp-for="campagnaDel" class="form-control">
                        @foreach (Campagna element in Model.campagne.OrderBy(c => c.nome).ToList())
                        {
                            <option value="@element.id">@element.nome</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary form-button">Elimina campagna</button>
                </div>
            </form>
        </div>
    </div>
</div>