@page
@using WaterManagerUI.Model.Item
@model WaterManagerUI.Pages.Elimina.EliminaSensore

<link rel="stylesheet" href="~/css/site.css"/>


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2>Elimina sensore</h2>
            <form method="post">
                <div class="form-group">
                    <label asp-for="nome">Nome sensore</label>
                    <select asp-for="nome" class="form-control">
                        @foreach (Sensore element in Model.sensori.OrderBy(c => c.nome).ToList())
                        {
                            <option value="@element.id">@element.nome</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary form-button">Elimina sensore</button>
                </div>
            </form>
        </div>
    </div>
</div>