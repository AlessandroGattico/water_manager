@page
@model WaterManagerUI.Pages.CreaCampo

<link rel="stylesheet" href="~/css/site.css"/>


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2>Crea campo</h2>
            <form method="post">
                <div class="form-group">
                    <label asp-for="campo.nome">Nome campo</label>
                    <input asp-for="campo.nome" class="form-control"/>
                    <span asp-validation-for="campo.nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="campo.dimensione">Dimensione campo (ha)</label>
                    <input asp-for="campo.dimensione" type="number" step="0.1" class="form-control"/>
                    <span asp-validation-for="campo.dimensione" class="text-danger"></span>
                </div>
                <div>
                    <input type="submit" value="Crea campo" class="btn btn-primary form-button"/>
                </div>
            </form>
        </div>
    </div>
</div>