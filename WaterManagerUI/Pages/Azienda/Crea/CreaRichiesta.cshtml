@page
@using WaterManagerUI.Model.Item
@model WaterManagerUI.Pages.CreaRichiesta

<link rel="stylesheet" href="~/css/site.css"/>


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2>Crea richiesta</h2>
            <form method="post" asp-page-handler="addAzienda">
                <div class="form-group">
                    <label asp-for="quantita">Quantit√† richiesta</label>
                    <input asp-for="quantita" type="number" step="0.5" class="form-control"/>
                    <span asp-validation-for="quantita" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="nomeBacino">Bacino idrico</label>
                    <select asp-for="nomeBacino" class="form-control">
                        @foreach (BacinoIdrico element in Model.bacini)
                        {
                            <option value="@element.id">@element.nome</option>
                        }
                    </select>
                </div>
                <div>
                    <input type="submit" value="Crea richiesta" asp-route-coltivazioneId="@Model.coltivazioneId" class="btn btn-primary form-button"/>
                </div>
            </form>
        </div>
    </div>
</div>