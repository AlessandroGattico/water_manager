@page
@model WaterManagerUI.Pages.CreaSensore

<link rel="stylesheet" href="~/css/site.css"/>


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2>Crea sensore</h2>
            <form method="post">
                <div class="form-group">
                    <label asp-for="nome"></label>
                    <input asp-for="nome" class="form-control"/>
                    <span asp-validation-for="nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="type">Tipologia</label>
                    <select asp-for="type" class="form-control">
                        @foreach (String element in Model.types)
                        {
                            <option>@element</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary form-button">Crea sensore</button>
                </div>
            </form>
        </div>
    </div>
</div>