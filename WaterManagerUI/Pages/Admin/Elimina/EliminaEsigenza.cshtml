@page
@model WaterManagerUI.Pages.Elimina.EliminaEsigenza

<link rel="stylesheet" href="~/css/site.css"/>


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2>Crea azienda</h2>
            <form method="post">
                <div class="form-group">
                    <label asp-for="esigenza">Esigenza</label>
                    <select asp-for="esigenza" class="form-control">
                        @foreach (String element in Model.esigenze)
                        {
                            <option>@element</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary form-button">Elimina esigenza</button>
                </div>
            </form>
        </div>
    </div>
</div>