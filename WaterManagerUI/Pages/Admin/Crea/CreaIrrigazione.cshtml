@page
@model WaterManagerUI.Pages.Crea.CreaIrrigazione

<link rel="stylesheet" href="css/site.css"/>


<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2>Crea azienda</h2>
            <form method="post">
                <div class="form-group">
                    <label asp-for="irrigazione">Irrigazione</label>
                    <input asp-for="irrigazione" class="form-control"/>
                    <span asp-validation-for="irrigazione" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary form-button">Crea irrigazione</button>
                </div>
            </form>
        </div>
    </div>
</div>