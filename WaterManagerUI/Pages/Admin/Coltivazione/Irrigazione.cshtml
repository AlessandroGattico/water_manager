@page
@model WaterManagerUI.Pages.Admin.Irrigazione

<link rel="stylesheet" href="~/css/site.css"/>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-2">
            @Html.Partial("layout/Admin/_SideMenuAdmin")
        </div>

        <div class="col-md-8">
            <div class="main-container">
                <div class="content">
                    <h2>Visualizza tipologie irrigazione</h2>
                </div>
            </div>

            @if (Model.irrigazioni.Any())
            {
                <div class="bottoni-azione">
                    <a asp-page="/Admin/Crea/CreaIrrigazione" class="bottone-aggiungi" style="text-decoration: none; color: inherit; color: #13b400">Aggiungi irrigazione</a>
                    <a asp-page="/Admin/Elimina/EliminaIrrigazione" class="bottone-aggiungi" style="text-decoration: none; color: inherit; border: 2px dashed #ff0000; color: #ff0000">Elimina irrigazione</a>
                </div>
            }
            else
            {
                <a asp-page="/Admin/Crea/CreaIrrigazione" style="text-decoration: none; color: inherit; grid-column: span 4">
                    <div class="bottone-aggiungi">
                        Aggiungi irrigazione
                    </div>
                </a>
            }
            @if (Model.irrigazioni.Any())
            {
                <table class="table">
                    <thead>
                    <tr>
                        <th>Nome</th>
                    </tr>
                    </thead>
                    <tbody>

                    @foreach (String irrigazione in Model.irrigazioni)
                    {
                        <tr>
                            <td>@irrigazione</td>
                        </tr>
                    }
                    </tbody>
                </table>
            }
        </div>

        <div class="col-md-2">
        </div>
    </div>
</div>